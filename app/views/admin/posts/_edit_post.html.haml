= form_for [:admin,  post] do |f|
  = render 'common/form_error', record: post
  .control-group
    = f.label :title, class:"control-label"
    .controls= f.text_field :title, class:"span8"
  .control-group
    = f.label :body, class:"control-label"
    .controls= f.text_area :body, class:"span8"
  = render 'action_menu', f:f, post:post
