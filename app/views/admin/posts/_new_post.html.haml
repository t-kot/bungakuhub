= form_for [:admin, @branch, @post] do |f|
  = render 'common/form_error', record: @post
  .control-group
    = f.label :title, class:"control-label"
    .controls= f.text_field :title, class:"span12"
  .control-group
    = f.label :body, class:"control-label"
    .controls= f.text_area :body, class:"span12"
  = render 'common/create_button', f:f
