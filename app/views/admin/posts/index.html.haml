%ul.nav.nav-tabs
  %li.active
    %a{href:"#new_post", "data-toggle"=>"tab"} New
  %li
    %a{href:"#edit", "data-toggle"=>"tab"} Edit

.tab-content
  .tab-pane#new_post.active
    %legend 新しいドキュメントを作る
    = form_for [:admin, @branch, @post] do |f|
      = render 'common/form_error', record: @post
      .field
        = f.label :title
        = f.text_field :title
      .field
        = f.label :body
        = f.text_area :body
      = render 'common/create_button', f:f
  .tab-pane#edit
    %legend すでにあるドキュメントを編集する
    - @posts.each_with_index do |post, i|
      %div{:class=>"accodion", :id=>"accordion#{i}"}
        .accordion-group
          .accordion-heading
            %a.accordion-toggle{"data-toggle"=>"collapse", "data-parent"=>"#accordion#{i}", :href=>"#collapse#{i}"}= post.title
          %div{:class=>"accordion-body collapse", :id=>"collapse#{i}"}
            .accordion-inner
              - if post.id == @update_post.try(:id)
                - post = @update_post
              = form_for [:admin,  post] do |f|
                = render 'common/form_error', record: post
                .field
                  = f.label :title
                  = f.text_field :title
                .field
                  = f.label :body
                  = f.text_area :body
                = render 'action_menu', f:f, post:post
              //= link_to 'Destroy', admin_post_path(post), method: :delete, data: {confirm: 'Are you sure?' }
