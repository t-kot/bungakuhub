%h1 管理用のレポジトリ詳細ページ
%p
  %b Type:
  = @repository.type
%p
  %b User:
  = @repository.user_id
%p
  %b Repository type:
  = @repository.repository_type_id
%p
  %b Name:
  = @repository.name
%p
  %b Description:
  = @repository.description

- @repository.branches.each_with_index do |branch, i|
  = link_to "#{i+1}:#{branch.name}", admin_branch_path(branch)
  %br

= link_to "Public Page", repository_path(@repository)
\|
= link_to "New Branch", new_admin_repository_branch_path(@repository)
\|
= link_to 'Edit', edit_admin_repository_path(@repository)
\|
= link_to 'Back', user_repositories_path(@repository.user)
