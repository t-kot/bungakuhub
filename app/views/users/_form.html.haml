= form_for @user, html:{class: "form-horizontal"} do |f|
  .control-group
    .control-label= f.label :display_name
    .controls= f.text_field :display_name
  .control-group
    .control-label= f.label :first_name, for:"user_first_name"
    .controls= f.text_field :first_name
  .control-group
    .control-label= f.label :last_name
    .controls= f.text_field :last_name
  = render 'users/forms/sex_field', f:f
  .control-group
    .form-actions
      = f.submit t("label.user.update"), class: "btn btn-primary"
